<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.medlider.medlider">

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_no_image"
        android:label="MedLíder"
        android:roundIcon="@drawable/ic_no_image"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".control.TelaBaseActivity"
            android:label="MedLíder" />
        <activity
            android:name=".control.LoginActivity"
            android:label="MedLíder"
            android:windowSoftInputMode="adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".control.CadastroClienteActivity"
            android:label="MedLíder" />
        <activity
            android:name=".control.CadastroRemedioActivity"
            android:label="MedLíder" />
        <activity
            android:name=".control.ListarClienteActivity"
            android:label="MedLíder" />
        <activity android:name=".control.ListarRemedioActivity" />
        <activity android:name=".control.VenderRemedioActivity"></activity>
    </application>

</manifest>