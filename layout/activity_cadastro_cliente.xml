<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/fundoTelas">
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        tools:context="br.com.medlider.medlider.control.CadastroClienteActivity">

        <TextView
            android:id="@+id/tela_cadastro_cliente_texto_titulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cadastrar cliente"
            android:textSize="35sp"
            android:textAlignment="center" />
        <EditText
            android:id="@+id/tela_cadastro_cliente_nome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Digite o nome:"
            android:inputType="textPersonName"
            android:layout_marginTop="40dp"/>

        <EditText
            android:id="@+id/tela_cadastro_cpf_cliente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Digite o CPF(Somente números):"
            android:inputType="number"/>
        <EditText
            android:id="@+id/tela_cadastro_cliente_rg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Digite o RG:"
            android:inputType="number"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Digite o telefone:"
            android:id="@+id/tela_cadastro_cliente_telefone"
            android:inputType="phone"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Digite o endereço:"
            android:id="@+id/tela_cadastro_cliente_endereco"
            android:inputType="text"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Escolha um sexo:"
            android:textSize="18sp"
            android:layout_marginTop="7dp"/>

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <RadioButton
                android:id="@+id/tela_cadastro_cliente_feminino"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Feminino"
                android:checked="true"/>

            <RadioButton
                android:id="@+id/tela_cadastro_cliente_masculino"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Masculino" />
        </RadioGroup>

        <EditText
            android:id="@+id/tela_cadastro_cliente_idade"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Digite a idade:"
            android:inputType="number" />


    </LinearLayout>
</ScrollView>