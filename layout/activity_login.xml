<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fundoTelas"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
         android:orientation="vertical"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:gravity="center"
        tools:context="br.com.medlider.medlider.control.LoginActivity">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Login"
            android:textSize="35sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/tela_login_usuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Entre com seu usuário:"
            android:inputType="textAutoComplete"
            android:layout_marginTop="115dp"
            android:background="#FFFFFF"
            android:textSize="22sp"/>
        <EditText
            android:id="@+id/tela_login_senha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Entre com sua senha:"
            android:inputType="textPassword"
            android:background="#FFFFFF"
            android:textSize="22sp"
            android:layout_marginTop="10dp"/>

        <Button
            android:id="@+id/tela_login_entrar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Entrar"
            android:layout_marginTop="10dp"
            android:background="#FFFFFF"
            android:textSize="22sp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Não tem cadastro? Clique aqui."
            android:textAlignment="center"
            android:layout_marginTop="14dp"
            android:clickable="true"/>
    </LinearLayout>
</ScrollView>